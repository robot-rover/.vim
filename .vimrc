filetype plugin indent on
set mouse=a
set expandtab
set tabstop=2
set softtabstop=2
set shiftwidth=2

nnoremap n j
nnoremap e k
nnoremap i l

inoremap <C-h> <Left>
inoremap <C-n> <Down>
inoremap <C-e> <Up>
inoremap <C-i> <Right>

noremap k n
noremap <S-k> <S-n>
noremap s i
noremap <S-s> <S-i>
noremap j e
noremap <S-j> <S-e>
noremap l ^
noremap <S-l> $

noremap <C-@> <ESC>

