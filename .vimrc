filetype plugin indent on
set mouse=a
set expandtab
set tabstop=2
set softtabstop=2
set shiftwidth=2

noremap n j
noremap e k
noremap i l
noremap l u

noremap k n
noremap <S-k> <S-n>
noremap s i
noremap <S-s> <S-i>
noremap j e
noremap <S-j> <S-e>
noremap l <S-6>
noremap <S-l> <S-4>

noremap <C-@> <ESC>

